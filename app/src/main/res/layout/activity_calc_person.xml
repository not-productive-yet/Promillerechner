<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient_stars"
    tools:context=".calculator.SelectPerson">

    <TextView
        android:id="@+id/personSelectTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select person"
        android:textAllCaps="true"
        android:textColor="@color/colorWhite"
        android:textSize="20dp"
        android:layout_marginTop="35dp"
        android:gravity="center"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerviewChoosePerson"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/personSelectTitle"
        android:padding="10dp"
        />

    <Button
        android:id="@+id/buttonGoToCreatePerson"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="Create new person"
        android:padding="10dp"
        android:background="@drawable/button_layout"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/recyclerviewChoosePerson"
        android:layout_marginTop="30dp" />

    <Button
        android:id="@+id/buttonGoToAlcohol"
        android:layout_width="180dp"
        android:layout_below="@+id/buttonGoToCreatePerson"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/button_layout"
        android:text="next"/>
</RelativeLayout>