<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient_stars"
    tools:context=".calculator.SelectPerson">

    <TextView
        android:id="@+id/personSelectTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/person_auswaehlen"
        android:textAllCaps="true"
        android:textColor="@color/colorWhite"
        android:textSize="20sp"
        android:layout_marginTop="35dp"
        android:gravity="center"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:id="@+id/personScroll"
        android:layout_below="@id/personSelectTitle">
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerviewChoosePerson"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        />
    </ScrollView>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    android:layout_alignParentBottom="true"
    android:layout_marginBottom="20dp"
    android:orientation="vertical"
    android:layout_centerHorizontal="true">
    <Button
        android:id="@+id/buttonGoToCreatePerson"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="@string/person_erstellen"
        android:padding="10dp"
        android:background="@drawable/button_layout"
        />

    <Button
        android:id="@+id/buttonGoToAlcohol"
        android:layout_width="180dp"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_layout"
        android:text="@string/weiter" />
</LinearLayout>

</RelativeLayout>