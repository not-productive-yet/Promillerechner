<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/editName"
    android:orientation="vertical"
    android:layout_toRightOf="@+id/Size"
    android:layout_marginLeft="100dp">

    <TextView
        android:id="@+id/textNumberPickerGewicht"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gewicht \nin kg"
        android:textColor="@color/colorWhite"
        android:layout_below="@id/editName"
        android:textAlignment="center"
        />

    <NumberPicker
        android:id="@+id/numberPickerGewicht"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textNumberPickerGewicht"

        />
</LinearLayout>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/editName"
    android:orientation="vertical"
    android:id="@+id/Size"
    android:layout_marginLeft="80dp">

    <TextView
        android:id="@+id/textNumberPickerSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Größe \nin cm"
        android:layout_below="@id/editName"
        android:textAlignment="center"
        android:textColor="@color/colorWhite"
        />

    <NumberPicker
        android:id="@+id/numberPickerSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:theme="@style/TimePickerTheme"
        />

</LinearLayout>

    <RadioGroup
        android:id="@+id/radioGroupEditGender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Size"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp">

        <RadioButton
            android:id="@+id/radioButtonMale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Male"
            android:textColor="@color/colorWhite"/>
        <RadioButton
            android:id="@+id/radioButtonFemale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Female"
            android:textColor="@color/colorWhite"/>

    </RadioGroup>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:layout_alignParentBottom="true">
        <Button
            android:id="@+id/buttonCancelPerson"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:layout_weight="1"
            android:background="@color/colorWhite"/>

        <Button
            android:id="@+id/buttonSavePerson"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            android:layout_toRightOf="@id/buttonEditCancelPerson"
            android:layout_weight="1"
            android:background="@color/colorWhite"
            />
    </LinearLayout>



</RelativeLayout>